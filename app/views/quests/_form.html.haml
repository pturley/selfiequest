= form_for @quest do |f|
  - if @quest.errors.any?
    #error_explanation
      %h2= "#{pluralize(@quest.errors.count, "error")} prohibited this quest from being saved:"
      %ul
        - @quest.errors.full_messages.each do |msg|
          %li= msg

  = f.text_field :name
  = f.text_field :start_datetime, :class => "datetimepicker"
  = f.text_field :end_datetime, :class => "datetimepicker"

  .actions
    = f.submit 'Save'
